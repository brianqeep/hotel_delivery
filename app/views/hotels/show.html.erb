<%= @hotel.name%><br>
<%= @hotel.location%><br>
<%= @hotel.about%><br>
<%= link_to like_hotel_path(@hotel), method: :put, class: "btn btn-primary" do%>
  <span class="glyphicon glyphicon-heart glyphicon-align-center"></span>
  <span class="badge"><%=@hotel.get_upvotes.size%></span>
<%end%>
<%= link_to unlike_hotel_path(@hotel), method: :put, class: "btn btn-primary" do%>
  <span class="glyphicon glyphicon-heart glyphicon-align-center"></span>
  <span class="badge"><%=@hotel.get_downvotes.size%></span>
<%end%>
<p><%= link_to "Place an order", new_hotel_order_path(@hotel) %></p>
<ul>

  <table class="table table-striped table-hover">
    <tr>
      <th>Customer</th>
      <th>Pieces</th>
      <th>Order</th>
      <th>Location</th>
      <th>Status</th>
    </tr>
    <% @hotel.orders.each do |order|%>
    <tr>
      <td><%= order.name%></th>
      <td><%= order.number%></th>
      <td><%= order.order%></th>
      <td><%= order.location%></th>
      <td><input type="checkbox" name="order_id" id="order_id" value="18"/></th>
    </tr>
    <% end%>

  </table>
