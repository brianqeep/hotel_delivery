<h2 class="show-h2 text-center"><%= @hotel.name%></h2>
<h3 class="show-h3 text-center"><%= @hotel.location%></h3>
<h3 class="show-h3 text-center"><%= @hotel.about%></h3>
<div class="like">
  <%= link_to like_hotel_path(@hotel), method: :put, class: "btn btn-primary" do%>
    <span>Like</span>
    <span class="badge"><%=@hotel.get_upvotes.size%></span>
  <%end%> &nbsp
  <%= link_to unlike_hotel_path(@hotel), method: :put, class: "btn btn-primary" do%>
    <span>Dislike</span>
    <span class="badge"><%=@hotel.get_downvotes.size%></span>
  <%end%>
</div>

<p class="order2"><%= link_to "Place an order", new_hotel_order_path(@hotel), class: "btn btn-primary" %></p>
<ul>
  <%if @hotel.user == current_user%>
  <table class="table table-striped table-hover">
    <tr>
      <th>Customer</th>
      <th>Pieces</th>
      <th>Order</th>
      <th>Location</th>
    </tr>
    <% @hotel.orders.each do |order|%>
    <tr id="order">
      <td><%= order.name%></td>
      <td><%= order.number%></td>
      <td><%= order.order%></td>
      <td><%= order.location%></td>
    </tr>
    <% end%>
  </table>
<%end%>
