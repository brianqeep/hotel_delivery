<%= @hotel.name%><br>
<%= @hotel.location%><br>
<%= @hotel.about%><br>
<%= link_to like_hotel_path(@hotel), method: :put, class: "btn btn-default" do%>
  <span>Like</span>
  <span class="badge"><%=@hotel.get_upvotes.size%></span>
<%end%>
<%= link_to unlike_hotel_path(@hotel), method: :put, class: "btn btn-default" do%>
  <span>Dislike</span>
  <span class="badge"><%=@hotel.get_downvotes.size%></span>
<%end%>
<p><%= link_to "Place an order", new_hotel_order_path(@hotel) %></p>
<ul>
  <%if @hotel.user == current_user%>
  <table class="table table-striped table-hover">
    <tr>
      <th>Customer</th>
      <th>Pieces</th>
      <th>Order</th>
      <th>Location</th>
      <th>Status</th>
    </tr>
    <% @hotel.orders.each do |order|%>
    <tr id="order">
      <td><%= order.name%></td>
      <td><%= order.number%></td>
      <td><%= order.order%></td>
      <td><%= order.location%></td>
      <td><input type="checkbox" id="done"/></td>
    </tr>
    <% end%>
  </table>
<%end%>
